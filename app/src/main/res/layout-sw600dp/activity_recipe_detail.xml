<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.RecipeDetailActivity">

    <fragment
        android:id="@+id/container_recipe_detail"
        android:name="com.myoung.android.bakingapp.ui.RecipeDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:layout="@layout/fragment_recipe_detail" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <FrameLayout
            android:id="@+id/container_recipe_step_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_navigation_bar"
            android:layout_alignParentTop="true"
            tools:layout="@layout/fragment_recipe_step_detail" />

        <LinearLayout
            android:id="@+id/layout_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/bt_prev"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_navigate_before_black_24dp"
                android:drawableStart="@drawable/ic_navigate_before_black_24dp"
                android:onClick="onButtonClick"
                android:text="prev" />

            <Button
                android:id="@+id/bt_next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:onClick="onButtonClick"
                android:text="next" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>